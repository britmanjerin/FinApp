<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table">
	<Dialog title="Payment Details" class="sapUiContentPadding sapUiSizeCompact" contentWidth="50%" initialFocus="done">
		<content>
			<l:Grid defaultSpan="L12 M12 S12" vSpacing="1" hSpacing="1">
				<l:content>
				
					<t:Table rows="{cModel>hist/}" enableColumnReordering="false" visibleRowCount="5" selectionMode="None" showNoData="true"
						enableCellFilter="true">
						<t:columns>
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false">
								<Text text="Payment Date" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>payDate}" />
								</t:template>
							</t:Column>
							<!--	<t:Column sortProperty="UOM" filterProperty="UOM" hAlign="Start" resizable="false">
								<Text text="EMI" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{oDialogModel>emi}"/>
								</t:template>
							</t:Column>-->
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false">
								<Text text="Amount Paid" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>amt}"/>
								</t:template>
							</t:Column>
						
						</t:columns>
					</t:Table>
				</l:content>
			</l:Grid>
		</content>
		<buttons>
			<Button type="Ghost" text="Close" press="onCl" class="sapUiTinyMarginEnd"/>
		</buttons>
		<beginButton></beginButton>
		<endButton></endButton>
	</Dialog>
</core:FragmentDefinition>