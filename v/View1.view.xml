<mvc:View controllerName="FabFinV3.c.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page title="Finance" class="sapUiSizeCompact">
				<content>
					<PullToRefresh id="pullToRefresh"
				refresh="handleRefresh" />
					<Toolbar height="3rem">
						<ToolbarSpacer/>
						<Button type="Accept" text="Payment Window" press="onUpdatePW"/>
						<Button type="Accept" text="Interest rate" press="onUpdateInt"/>
						<Button type="Accept" text="Add Customer" press=".onAddCust(false)" class="sapUiTinyMarginEnd"/>
					</Toolbar>
					
					<List items="{oModel>/}" class="sapUiTinyMarginBegin" width="96.5%">
						<ObjectListItem title="{oModel>name}" type="Active" press=".onNav(${oModel>})" number="{oModel>lnAmt}" numberUnit="INR">
							<firstStatus>
								<ObjectStatus
									text="{oModel>goldGms} gms"/>
							</firstStatus>
							<secondStatus>
									<ObjectStatus
									text="{ parts: [{ path: 'oModel>lnCls' }, { path: 'oModel>nxtInstsDate' }, 
									{ path: 'oModel>odDat_1' }, { path: 'oModel>odDat_2' }, 
									{ path: 'oModel>odDat_3' }, { path: 'oModel>odAmt_1' }, 
									{ path: 'oModel>odAmt_2' }, { path: 'oModel>odAmt_3' }, 
									{ path: 'oModel>partPay' }], formatter: 'FabFinV3.c.View1.prototype.formatter.setStatus' }"/>
							
							</secondStatus>
							
							<ObjectAttribute text="Loan Date: {oModel>lnDt}"/>
							<ObjectAttribute text="Due on: {oModel>nxtInstsDate}"/>
							
						</ObjectListItem>
					</List>
				
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
