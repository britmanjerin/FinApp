<mvc:View controllerName="FabFinV3.c.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page title="Finance" class="sapUiSizeCompact">
				<customHeader>
					<Bar>
							<contentLeft>
								<VBox visible="{=!${mModel>/roi} ? false : true}">
									<core:Icon src="sap-icon://save" press="onBkpFile" class="sapUiTinyMarginBegin" visible="{=${uModel>/adm} || ${config>/bkp}}"/>
								</VBox>
								
							</contentLeft>
						<contentMiddle>
							<Title text="JJB Finance" titleStyle="H4"/>
						</contentMiddle>
						<contentRight>
							<core:Icon src="sap-icon://person-placeholder" press="onPressUser" class="sapUiTinyMarginEnd"/>
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<PullToRefresh id="pullToRefresh" refresh="handleRefresh"/>
					<l:Grid defaultSpan="L12 M12 S12" vSpacing="0" hSpacing="0.5">
						<OverflowToolbar height="2.5rem" visible="{=!${mModel>/roi} ? false : true}">
							<CheckBox id="idFilter" text="All" selected="false" select="onFilterData" visible="{=${uModel>/adm} || ${config>/filter}}"/>
							<ToolbarSpacer/>
							
							<Button type="Accept" icon="sap-icon://appointment" text="Schedule" press="onUpdatePW" visible="{=${uModel>/adm} || ${config>/paySchl}}"/>
							<Button type="Accept" icon="sap-icon://waiver" text="Interest" press="onUpdateInt" visible="{=${uModel>/adm} || ${config>/intRt}}"/>
							<Button type="Accept" icon="sap-icon://add-employee" text="Add" press=".onAddCust(false)"/>
						</OverflowToolbar>
						<List id="idList" items="{oModel>/}" growing="true" growingThreshold="25" growingScrollToLoad="true">
							<ObjectListItem title="{oModel>name}" type="Active" press=".onNav(${oModel>})" number="{oModel>lnAmt}" numberUnit="INR">
								<firstStatus>
									<ObjectStatus text="{oModel>goldGms} gms"/>
								</firstStatus>
								<secondStatus>
									<ObjectStatus inverted="true"
										text="{ parts: [{ path: 'oModel>lnCls' }, { path: 'oModel>nxtInstsDate' }, { path: 'oModel>odDat_1' }, { path: 'oModel>odDat_2' }, { path: 'oModel>odDat_3' }, { path: 'oModel>odAmt_1' }, { path: 'oModel>odAmt_2' }, { path: 'oModel>odAmt_3' }, { path: 'oModel>partPay' }], formatter: 'FabFinV3.c.View1.prototype.formatter.setStatus' }"/>
								</secondStatus>
								<ObjectAttribute text="Loan Date: {oModel>lnDt}"/>
								<ObjectAttribute text="Due on: {oModel>nxtInstsDate}" visible="{=${oModel>nxtInstsDate} ? true : false}"/>
								<ObjectAttribute class="classNotAttr" text="{ parts: [{ path: 'oModel>notice' }, { path: 'oModel>notDat' }], formatter: '.formatter.setNotStatus' }" visible="{=${oModel>notice} ? true : false}"/>
							</ObjectListItem>
						</List>
					</l:Grid>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
