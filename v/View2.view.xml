<mvc:View controllerName="FabFinV3.controller.View2" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="Customer" class="sapUiSizeCompact">
				<content>
					<l:Grid defaultSpan="L12 M12 S12">
						<VBox>
							<Text text="Name"/>
							<Text text="{cModel>/name}"/>
							<layoutData>
								<l:GridData span="L3 M4 S12"/>
							</layoutData>
						</VBox>
						<VBox>
							<Text text="Address"/>
							<Text text="{cModel>/addr}"/>
							<layoutData>
								<l:GridData span="L3 M4 S12"/>
							</layoutData>
						</VBox>
						<VBox>
							<Text text="Mobile No"/>
							<Text text="{cModel>/mob}"/>
							<layoutData>
								<l:GridData span="L3 M4 S12"/>
							</layoutData>
						</VBox>
						<VBox>
							<Text text="Email"/>
							<Text text="{cModel>/mail}"/>
							<layoutData>
								<l:GridData span="L3 M4 S12"/>
							</layoutData>
						</VBox>
					</l:Grid>
					<Toolbar>
						<!--<Text text="Interest till today for balance Principal Amount {cModel>/intTD/prA} is {cModel>/intTD/int}"/>-->
						<ToolbarSpacer/>
						<Text text="Lone Closed" visible="{=${cModel>/lnCls}=== 'X' ? true : false}"/> 
							<Button text="Interest rate" press="onUpdateInt" visible="{=${cModel>/lnCls}=== 'X' ? false : true}"/>
						<Button text="Add" press="onAddInst" visible="{=${cModel>/lnCls}=== 'X' ? false : true}"/>
					</Toolbar>
					<t:Table rows="{cModel>/instDet/}" enableColumnReordering="false" visibleRowCount="14" selectionMode="None" showNoData="true"
						rowActionCount="1" fixedColumnCount="1" enableCellFilter="true">
						<t:columns>
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false" width="5.5rem">
								<Text text="Installment" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>no}"/>
								</t:template>
							</t:Column>
							<t:Column sortProperty="UOM" filterProperty="UOM" hAlign="Start" resizable="false" width="8rem">
								<Text text="Principal" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>prA}"/>
								</t:template>
							</t:Column>
							<t:Column sortProperty="UOM" filterProperty="UOM" hAlign="Start" resizable="false" width="8rem">
								<Text text="Interest" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>int}"/>
								</t:template>
							</t:Column>
							<!--	<t:Column sortProperty="UOM" filterProperty="UOM" hAlign="Start" resizable="false" width="8rem">
								<Text text="Late Payment Interest" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>ltPay}"/>
								</t:template>
							</t:Column>
							-->
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false" width="8rem">
								<Text text="Amount Paid" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>amtPaid}"/>
								</t:template>
							</t:Column>
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false" width="8rem">
								<Text text="Payment Date" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{path: 'cModel>payDate', type:'sap.ui.model.odata.type.DateTime', formatOptions: { style: 'medium' , pattern: 'dd-MM-YYYY'}}"/>
								</t:template>
							</t:Column>
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false" width="8rem">
								<Text text="Int. Period From" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{path: 'cModel>intFrm', type:'sap.ui.model.odata.type.DateTime', formatOptions: { style: 'medium' , pattern: 'dd-MM-YYYY'}}"/>
								</t:template>
							</t:Column>
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false" width="8rem">
								<Text text="Int. Period To" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{path: 'cModel>intTo', type:'sap.ui.model.odata.type.DateTime', formatOptions: { style: 'medium' , pattern: 'dd-MM-YYYY'}}"/>
								</t:template>
							</t:Column>
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false" width="8rem">
								<Text text="Balance" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text text="{cModel>bPrA}"/>
								</t:template>
							</t:Column>
							<t:Column sortProperty="" filterProperty="" hAlign="Start" resizable="false" width="8rem">
								<Text text="Payment Window" class="white bold" textAlign="Begin" wrapping="false" width="100%"/>
								<t:template>
									<Text
										text="{path: 'cModel>instStDt', type:'sap.ui.model.odata.type.DateTime', formatOptions: { style: 'medium' , pattern: 'dd-MM-YYYY'}} to {path: 'cModel>fnPayDt', type:'sap.ui.model.odata.type.DateTime', formatOptions: { style: 'medium' , pattern: 'dd-MM-YYYY'}}"/>
								</t:template>
							</t:Column>
						
						</t:columns>
						<t:rowActionTemplate>
							<t:RowAction>
								<t:RowActionItem icon="sap-icon://history" press=".onShowHistory($event)"/>
							</t:RowAction>
						</t:rowActionTemplate>
					</t:Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>